<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Event, "Name" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :content %>
  </div>
    <div class="field">
    <%= f.label :seats, "Spots, not including you" %><br>
    <%= f.number_field :seats %>
  </div>
  <div class="field">
    <%= f.label :when, "Please Pick A Date" %><br>
     <%= f.datetime_select(:when,  ampm: true, :default => { :hour => 18, :minute => 59 }) %>
  </div>

  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
